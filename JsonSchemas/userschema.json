{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://dsp.polito.it/userschema.json",
    "title": "User",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "id": { "type":"integer" },
        "name": { "type":"string" },
        "email": { "type": "string", "format": "idn-email"},
        "password": { 
            "type": "string",
            "minLength": 6,
            "maxLength": 20 
        }
    },
    "required": ["id", "email"]      
}
